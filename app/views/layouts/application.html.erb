<!doctype html>
<html>
  <head>
    <%= javascript_include_tag "application", "jquery", "jquery-ui-custom", "timesheet_edit","date","jquery.datePicker", :cache => true %>
    <!--[if IE]><%= javascript_include_tag %><![endif]-->
    <%= stylesheet_link_tag "main" %>
    <%= stylesheet_link_tag "report", :media => "print,screen" %>
    <%= unobtrusive_datepicker_includes %>
    <title>TALHO Time Admin</title>
    <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? -%>
  </head>
  <body>
    <div id='header'>
      <a href='/'><img class='logo' src='/images/talho_logo.png'></a>
      <div class='title'>TALHO Time Admin</div>
      <%= render :file => '_menubar' %>
    </div>
    <div id='content'>
      <%= yield %>
    </div>
  </body>
</html>
