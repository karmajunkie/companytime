<!doctype html>
<html>
  <head>
    <%= javascript_include_tag "jquery",  "jquery-ui", "jrails", "application",  "timesheet_edit","date", :cache => true %>
    <!--[if IE]><%= javascript_include_tag "jquery.bgiframe", :cache => true%><![endif]-->
    <%= stylesheet_link_tag "main","datepicker", "jquery-ui-custom" %>
    <%= stylesheet_link_tag "report", :media => "print,screen" %>
    
    <title>TALHO Time Admin</title>
    <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? -%>
  </head>
  <body>
    <div id='header'>
      <a href='/'><img class='logo' src='/images/talho_logo.png'></a>
      <div class='title'>TALHO Time Admin</div>
      <%= render :file => '_menubar' %>
    </div>
    <div id='content'>
			<%- [:notice, :success, :error].each do |type| -%>
        <%- if flash[type] -%>
          <p class='<%= type %>'><%= flash[type] %></p>
        <%- end -%>
      <%- end -%>
      <%= yield %>
    </div>
  </body>
</html>
