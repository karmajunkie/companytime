<% form_tag(search_work_periods_path, :method => :get) do  %>
  <p>
		<%= label_tag :search_employee, "Employee" %>
		<%= collection_select(:search, :employee, current_user.admin? ? User.all : [current_user], 'id', 'name', :include_blank => current_user.admin?) %>
  </p>
  <p>
    <%= label_tag :search_start_date, "Start date" %>
    <%= text_field_tag 'search[start_date]', @start_date.strftime("%m/%d/%Y"),  :class => 'datepicker' %>
  </p>
  <p>
    <%= label_tag :search_end_date, "End date" %>
    <%= text_field_tag 'search[end_date]', @end_date.strftime("%m/%d/%Y"), :class => "datepicker"  %>
  </p>

  <%= submit_tag "Search" %>


<% end %>

<div class='search_results'>
    <ul>
			<% @work_periods.each do |work_period| %>
				<li class='work_period'>
				  <%= work_period.start_time.strftime("%x %X") %>
				</li>
			<% end %>
	  </ul>
</div>