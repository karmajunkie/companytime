<h1>Editing holiday</h1>

<% form_for(@holiday) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :holiday_date %><br />
    <%= f.datetime_select :holiday_date %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :optional %><br />
    <%= f.check_box :optional %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @holiday %> |
<%= link_to 'Back', holidays_path %>